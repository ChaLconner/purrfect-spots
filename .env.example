# ===========================================
# PURRFECT SPOTS - MASTER ENVIRONMENT TEMPLATE
# ===========================================
# This is the comprehensive template for all environment variables.
# Copy relevant sections to:
# - frontend/.env (frontend variables with VITE_ prefix)
# - backend/.env (backend variables)
#
# See ENV_SETUP.md for complete documentation.

# ===========================================
# FRONTEND VARIABLES (VITE_ prefix required)
# ===========================================

# Authentication
VITE_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# API Configuration
# Leave empty for auto-detection, or set explicitly:
# Development: http://localhost:8000
# Production: https://purrfect-spots-backend.vercel.app
VITE_API_BASE_URL=http://localhost:8000

# Google Maps
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Image Optimization
VITE_MAX_IMAGE_WIDTH=1920
VITE_MAX_IMAGE_HEIGHT=1080
VITE_IMAGE_QUALITY=85
VITE_MAX_FILE_SIZE=10

# Debug (Development Only)
# VITE_DEBUG_MODE=true
# VITE_LOG_LEVEL=debug

# ===========================================
# BACKEND VARIABLES
# ===========================================

# Server Configuration
PORT=8000
DEBUG=False
ENVIRONMENT=development

# Authentication - Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Authentication - JWT
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_here

# Database - Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Configuration
# Development:
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# Production:
# CORS_ORIGINS=https://purrfect-spots.vercel.app

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:5173

# Cloud Storage - AWS S3 (Optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=ap-southeast-2
# AWS_S3_BUCKET=your_s3_bucket_name

# AI Services - Google Vision (Optional)
GOOGLE_VISION_KEY_PATH=backend/keys/google_vision.json
# GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ===========================================
# ERROR TRACKING & MONITORING (Recommended for Production)
# ===========================================

# Sentry Configuration - https://sentry.io
# 1. Create a free account at sentry.io
# 2. Create a new FastAPI project
# 3. Copy the DSN from your project settings

# Backend Sentry DSN
SENTRY_DSN=

# Performance Monitoring (0.0 to 1.0, where 1.0 = 100% of requests)
SENTRY_TRACES_SAMPLE_RATE=0.1

# Profiling (requires Sentry Pro plan)
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===========================================
# CACHING & RATE LIMITING (Optional)
# ===========================================

# Redis URL for rate limiting persistence
# Required for distributed deployments
# REDIS_URL=redis://localhost:6379

# ===========================================
# ENVIRONMENT-SPECIFIC VALUES
# ===========================================
# 
# DEVELOPMENT:
#   DEBUG=True
#   ENVIRONMENT=development
#   VITE_API_BASE_URL=http://localhost:8000
#   CORS_ORIGINS=http://localhost:3000,http://localhost:5173
#
# PRODUCTION:
#   DEBUG=False
#   ENVIRONMENT=production
#   VITE_API_BASE_URL=https://purrfect-spots-backend.vercel.app
#   CORS_ORIGINS=https://purrfect-spots.vercel.app