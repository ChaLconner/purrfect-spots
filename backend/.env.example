# ================================
# BACKEND ENV EXAMPLE - Purrfect Spots
# ================================

# --- Server ---
PORT=8000
DEBUG=False
ENVIRONMENT=development

# --- Authentication ---
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# --- Database (Supabase) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# --- CORS ---
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
FRONTEND_URL=http://localhost:5173

# --- AWS S3 ---
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=your_region_here
AWS_S3_BUCKET=your_bucket_here
AWS_ACCOUNT_ID=your_account_id_here

# --- Google APIs ---
GOOGLE_VISION_API_KEY=your_vision_key_here
GOOGLE_VISION_KEY_PATH=keys/google_vision.json
GOOGLE_MAPS_API_KEY=your_maps_key_here

# --- Sentry ---
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.1

# --- EMAIL (Resend) ---
SMTP_SERVER=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=your_resend_password_here
SMTP_SENDER="Purrfect Spots <onboarding@resend.dev>"

# --- REDIS ---
REDIS_URL=your_redis_url_here

# --- Stripe ---
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here

# Treat Price IDs
STRIPE_TREAT_SMALL_PRICE_ID=your_price_id_here
STRIPE_TREAT_MEDIUM_PRICE_ID=your_price_id_here
STRIPE_TREAT_LARGE_PRICE_ID=your_price_id_here
STRIPE_TREAT_LEGENDARY_PRICE_ID=your_price_id_here